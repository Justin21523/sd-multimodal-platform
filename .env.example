# .env.example
# ===================
# SD Platform Configuration
# ===================

# Server Settings
HOST=0.0.0.0          # Bind to all interfaces for container compatibility
PORT=8000              # Standard non-privileged port
DEBUG=True             # Enable detailed error messages in development
RELOAD=True            # Auto-restart server on code changes
# Model Paths
SD_MODEL_PATH=models/stable-diffusion/sd-1.5
CONTROLNET_MODEL_PATH=models/controlnet
LORA_MODEL_PATH=models/lora
VAE_MODEL_PATH=models/vae

# Hardware Settings
DEVICE=cuda                      # Primary compute device
CUDA_VISIBLE_DEVICES=0          # GPU selection for multi-GPU systems
ENABLE_CPU_OFFLOAD=True         # Memory management for large models
ENABLE_ATTENTION_SLICING=True   # Reduce VRAM usage with minimal speed impact

# API Settings
API_PREFIX=/api/v1               # Versioned API endpoints
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
MAX_WORKERS=4                    # Concurrent request handling
MAX_BATCH_SIZE=4                # Prevent resource exhaustion

# Image Generation Defaults
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512
DEFAULT_STEPS=20
DEFAULT_GUIDANCE_SCALE=7.5
MAX_BATCH_SIZE=4

# Storage
OUTPUT_DIR=data/images/output
TEMP_DIR=data/images/temp
LOG_DIR=data/logs

# Security (generate your own in production)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30